{
  "name": "@skbkontur/react-sorge",
  "version": "0.1.0",
  "description": "React Fiber event listener",
  "main": "index.js",
  "typings": "typings/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:skbkontur/react-sorge.git"
  },
  "bugs": {
    "url": "https://github.com/skbkontur/react-sorge/issues"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "copyfiles README.md package.json build && copyfiles -u=2 \"src/typings/**/*.d.ts\" build/typings/",
    "clean": "git clean -fdxqe node_modules",
    "test": "jest",
    "debug": "cross-env TS_NODE_PROJECT=fixtures/tsconfig.json NODE_ENV=development webpack serve --config fixtures/webpack.config.ts",
    "lint": "tsc --noEmit",
    "lint:test": "tsc -p fixtures/tsconfig.json --noEmit"
  },
  "license": "MIT",
  "dependencies": {
    "semver": "6.3.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.22",
    "@types/jest-environment-puppeteer": "4.4.1",
    "@types/node": "14.14.41",
    "@types/react-dom": "16.9.8",
    "@types/semver": "6.2.0",
    "@types/webpack-dev-server": "3.11.3",
    "babel-jest": "26.6.3",
    "copyfiles": "2.3.0",
    "cross-env": "7.0.2",
    "jest": "26.6.3",
    "jest-puppeteer": "5.0.2",
    "jest-teamcity-reporter": "0.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "puppeteer": "9.0.0",
    "ts-jest": "26.5.5",
    "ts-loader": "9.1.0",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.4",
    "webpack": "5.35.0",
    "webpack-cli": "4.6.0",
    "webpack-dev-server": "3.11.2"
  },
  "peerDependencies": {
    "react": ">=16.7 <=17.0",
    "react-dom": ">=16.7 <=17.0"
  },
  "jest": {
    "testResultsProcessor": "jest-teamcity-reporter",
    "preset": "jest-puppeteer",
    "transform": {
      "\\.ts$": [
        "ts-jest"
      ]
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/fixtures/tsconfig.json"
      }
    },
    "testRegex": "\\.test\\.ts$"
  }
}
