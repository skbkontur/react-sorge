{
  "compilerOptions": {
    "outDir": "build",
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "es2015", "dom", "dom.iterable"],
    "allowUmdGlobalAccess": true,
    "types": ["node"],
    "downlevelIteration": true,
    "target": "es5",
    "module": "commonjs"
  },
  "include": ["./src/**/*"]
}
